<Window x:Class="ContinentCountriesStates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContinentCountriesStates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Name="stckpanel1" Loaded="stckpanel1_Loaded">
        <ComboBox Name="cmbContinent" SelectionChanged="cmbContinent_SelectionChanged" Width="200"></ComboBox>
        <ComboBox Name="cmbCountries" SelectionChanged="cmbCountries_SelectionChanged" Width="200"></ComboBox>
        <Label Name="lblCountry_Capital" Width="200"></Label>
        <Image Name="flag1" Height="50" Width="60"></Image>
        <ComboBox Name="cmbStates" Width="200" SelectionChanged="cmbStates_SelectionChanged"></ComboBox>
        <Label Name="lblState_Capital" Width="200"></Label>
    </StackPanel>
</Window>
